function w() {
    local srcdir workondir
    local -a searchdirs

    srcdir="${SRC_DIR:-${HOME}/src}"
    searchdirs=("${HOME}/src")

    if [[ -n "${1:-}" ]]; then
        workondir="${srcdir}/${1}"
        if [[ -d "${workondir}" ]]; then
            cd "${workondir}"
            return 0
        fi
    fi

    prj=$(find "${=searchdirs}" -maxdepth 1 -mindepth 1 -type d -print \
        | sed "s@^${srcdir}/@@" \
        | fzf-tmux "${=FZF_TMUX_OPTS:-}" -q "${@:-}")

    if [[ -z "${prj}" ]]; then
        echo "No project selected" 1>&2
        return 2
    fi

    workondir="${srcdir}/${prj}"

    if [[ -d "${workondir}" ]]; then
        cd "${workondir}"
    else
        echo "Invalid environment: ${prj}" 1>&2
        return 1
    fi
}

