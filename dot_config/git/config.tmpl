[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[init]
	defaultBranch = main
[user]
	name = Mathieu Lemay
	email = {{ .email }}
	{{- if ne .signingkey "" }}
	signingkey = {{ .signingkey }}
	{{- end}}
[commit]
	verbose = true
	{{- if ne .signingkey "" }}
	gpgsign = true
	{{- end}}
[fetch]
	prune = true
[pull]
	ff = only
[push]
	default = simple
	autoSetupRemote = true
[branch]
	sort = -committerdate
[tag]
	sort = -version:refname
[interactive]
	singleKey = true
[alias]
	st = status
	co = checkout
	ci = commit
	sw = switch
	ap = add -p
	ai = add --intent-to-add
	ri = rebase -i
	rc = rebase --continue
	ds = diff --staged
	dtm = difftool -y --tool=meld
	dtv = difftool -y --tool=vimdiff
	lp = log -p
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %C(bold magenta)(%G?)%Creset' --abbrev-commit
	cia = commit --amend
	fixup = commit --amend --no-edit
	pf = push --force-with-lease
	fnv = commit --amend --no-edit --no-verify
	cinv = commit --no-verify
	pnv = push --no-verify
	pfnv = push --force-with-lease --no-verify
	sh = rev-parse --short HEAD
	edit = "!vim `git ls-files -m`"
	track = update-index --no-assume-unchanged
	untrack = update-index --assume-unchanged

	# Get the current branch name (not so useful in itself, but used in
	# other aliases)
	branch-name = "!git rev-parse --abbrev-ref HEAD"

	# Push the current branch to the remote "origin", and set it to track
	# the upstream branch
	publish = "!git push -u origin $(git branch-name)"

	# Delete the remote version of the current branch
	unpublish = "!git push origin :$(git branch-name)"

	exclude = "!sh -c 'echo "$1" >> .git/info/exclude' -"

	sync = "!git pull && git forget"
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[color "diff"]
	whitespace = red reverse
[gui]
	editor = mousepad
	fontui = -family \"Noto Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Noto Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	tabsize = 4
[diff]
	algorithm = histogram
	tool = meld
[merge]
	conflictstyle = zdiff3
[url "https://"]
	insteadOf = git://
[help]
	autocorrect = prompt
[log]
	date = iso
{{- if ne (lookPath "ov") "" }}
[pager]
	log = "ov -F --section-delimiter '^commit' --section-header-num 3"
	diff = "ov -F --section-delimiter '^diff' --section-header"
	show = "ov -F --header 3"
{{- end }}

{{- if eq .setupPrivateGit true }}
[includeIf "gitdir:~/src/private/**"]
	path = config.private
[includeIf "gitdir:~/.local/share/chezmoi/**"]
	path = config.private
{{- end}}

{{- if ne .gitUrlSSHOverrides "" }}
{{- range (split "," .gitUrlSSHOverrides) }}
{{- $override := (splitn "=" 2 (. | trim)) }}
{{- if eq (len $override) 2 }}
[url "ssh://git@{{ $override._1 }}/"]
	insteadOf = https://{{ $override._0 }}/
{{- else }}
[url "ssh://git@{{ $override._0 }}/"]
	insteadOf = https://{{ $override._0 }}/
{{- end }}
{{- end }}
{{- end }}

