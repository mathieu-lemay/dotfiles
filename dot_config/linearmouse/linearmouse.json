{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.9.5",
  "schemes" : [
    {
      "buttons" : {
        "universalBackForward" : true
      },
      "if" : {
        "device" : {
          "vendorID" : "0x46d",
          "productID" : "0xc52b",
          "productName" : "USB Receiver",
          "category" : "mouse"
        }
      },
      "scrolling" : {
        "distance" : {
          "vertical" : "auto"
        },
        "speed" : {
          "vertical" : 5
        },
        "reverse" : {
          "vertical" : false
        },
        "modifiers" : {
          "vertical" : {
            "command" : {
              "type" : "preventDefault"
            }
          }
        },
        "acceleration" : {
          "vertical" : 1
        }
      },
      "pointer" : {
        "acceleration" : 0.8956,
        "speed" : 0.1,
        "disableAcceleration" : false
      }
    },
    {
      "if" : {
        "device" : {
          "productName" : "Apple Internal Keyboard \/ Trackpad",
          "productID" : "0x0",
          "vendorID" : "0x0",
          "category" : "trackpad"
        }
      },
      "scrolling" : {
        "reverse" : {
          "vertical" : true
        }
      }
    }
  ]
}