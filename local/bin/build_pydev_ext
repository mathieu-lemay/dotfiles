#! /bin/zsh

set -eu

if [ $# -ne 1 ]; then
    echo "Usage: $0 <version>"
    echo "Available versions are:"
    pyenv versions
    exit 1
fi

pyversion=$1
pyexe="${PYENV_ROOT}/versions/${pyversion}/bin/python"

if [[ ! -e "${pyexe}" ]]; then
    echo "Invalid python version: ${pyversion}"
    exit 1
fi

tmpdir="$(mktemp -d)"

cleanup() {
    sudo rm -rf "${tmpdir}"
}

trap cleanup EXIT

virtualenv -p "${pyexe}" "${tmpdir}"
source "${tmpdir}/bin/activate"
pip install cython

sudo python "/opt/pycharm-professional/plugins/python/helpers/pydev/setup_cython.py" build_ext --inplace --force-cython
